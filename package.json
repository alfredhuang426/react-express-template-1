{
  "name": "react-express-vite6-ts-single",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently -k -n VITE,API -c magenta,cyan \"vite\" \"tsx watch server/index.ts\"",
    "build": "rimraf dist && vite build && tsc -p tsconfig.server.json",
    "preview": "cross-env NODE_ENV=production node dist/server/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.server.json --noEmit"
  },
  "dependencies": {
    "express": "^4.21.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3",
    "vite": "^6.0.0"
  }
}
